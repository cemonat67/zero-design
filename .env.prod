# Production Environment Variables
# Copy this file to .env.prod and fill in the actual values

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here-min-32-chars
CSRF_SECRET_KEY=your-csrf-secret-key-here-min-32-chars

# Database Configuration
DATABASE_URL=postgresql://username:password@postgres:5432/zero_design_prod
POSTGRES_DB=zero_design_prod
POSTGRES_USER=zero_design_user
POSTGRES_PASSWORD=your-strong-database-password-here
POSTGRES_PORT=5432

# Domain Configuration
DOMAIN_NAME=app.onatltd.com
SSL_EMAIL=admin@onatltd.com

# Security Settings
ALLOWED_HOSTS=app.onatltd.com,www.app.onatltd.com
CORS_ORIGINS=https://app.onatltd.com,https://www.app.onatltd.com

# Monitoring & Alerts
ADMIN_EMAIL=admin@onatltd.com
SMTP_SERVER=smtp.onatltd.com
SMTP_PORT=587
SMTP_USERNAME=noreply@onatltd.com
SMTP_PASSWORD=your-smtp-password

# Backup Configuration
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=zero-design-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/app/data/uploads
LOG_LEVEL=INFO

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://redis:6379/0
RATELIMIT_DEFAULT=100 per hour