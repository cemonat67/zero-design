# Flask Configuration
FLASK_ENV=staging
FLASK_DEBUG=False
SECRET_KEY=your-staging-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://zero_design_staging:staging_password@db:5432/zero_design_staging
POSTGRES_DB=zero_design_staging
POSTGRES_USER=zero_design_staging
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_URL=redis://redis:6379/1

# Domain Configuration
DOMAIN_NAME=staging.onatltd.com
SSL_EMAIL=admin@onatltd.com

# Security Settings
ALLOWED_HOSTS=staging.onatltd.com,www.staging.onatltd.com
CORS_ORIGINS=https://staging.onatltd.com,https://www.staging.onatltd.com

# Monitoring & Alerts
ADMIN_EMAIL=admin@onatltd.com
SMTP_SERVER=smtp.onatltd.com
SMTP_PORT=587
SMTP_USERNAME=admin@onatltd.com
SMTP_PASSWORD=your-smtp-password

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
S3_BUCKET=zero-design-staging-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1

# Application Settings
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif,pdf,doc,docx

# Rate Limiting
RATELIMIT_STORAGE_URL=redis://redis:6379/2
RATELIMIT_DEFAULT=100 per hour
RATELIMIT_LOGIN=10 per minute
RATELIMIT_API=50 per minute